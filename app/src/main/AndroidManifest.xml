<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <service
            android:name=".CosmoBondWatchFaceService"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="com.google.android.wearable.permission.BIND_WATCH_FACE">
            <intent-filter>
                <action android:name="androidx.wear.watchface.category.WATCH_FACE" />
            </intent-filter>
            <meta-data
                android:name="androidx.wear.watchface.wff"
                android:resource="@raw/watchface" />
            <meta-data
                android:name="androidx.wear.watchface.preview"
                android:resource="@drawable/watchface_preview" />
        </service>
    </application>

</manifest>
