<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true">
        <profileable
            android:shell="true"
            tools:targetApi="33" />
        <activity
            android:name=".ConfigActivity"
            android:exported="false" />
        <service
            android:name=".CosmoBondWatchFaceService"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="com.google.android.wearable.permission.BIND_WATCH_FACE">
            <intent-filter>
                <action android:name="androidx.wear.watchface.category.WATCH_FACE" />
            </intent-filter>
            <meta-data
                android:name="androidx.wear.watchface.wff"
                android:resource="@raw/watchface" />
            <meta-data
                android:name="androidx.wear.watchface.preview"
                android:resource="@drawable/watchface_preview" />
        </service>
    </application>

</manifest>
