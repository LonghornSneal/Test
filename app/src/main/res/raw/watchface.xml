<?xml version="1.0" encoding="utf-8"?>
<WatchFaceFormat version="2.0">
    <Metadata>
        <Name>CosmoBond Watchface</Name>
        <Author>CosmoBond</Author>
    </Metadata>
    <Parameters>
        <DeviceParameters>
            <ScreenWidth>480</ScreenWidth>
            <ScreenHeight>480</ScreenHeight>
        </DeviceParameters>
    </Parameters>
    <Partials>
        <Partial id="time_text">
            <Text>
                <Value>
                    <Time format="HH:mm"/>
                </Value>
                <Font family="sans-serif" size="48"/>
                <Position x="50%" y="50%" anchor="center"/>
            </Text>
        </Partial>
    </Partials>
    <Scenes>
        <Scene id="active">
            <Group>
                <Background color="#000000"/>
                <PartialRef ref="time_text"/>
            </Group>
        </Scene>
        <Scene id="ambient">
            <Group>
                <Background color="#000000"/>
                <PartialRef ref="time_text"/>
            </Group>
        </Scene>
    </Scenes>
</WatchFaceFormat>
