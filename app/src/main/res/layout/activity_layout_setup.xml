<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_hint"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_time_position"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/time_position_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/time_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_setup_time_top" />

            <RadioButton
                android:id="@+id/time_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_setup_time_center" />

            <RadioButton
                android:id="@+id/time_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_setup_time_bottom" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_font"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <RadioGroup
            android:id="@+id/font_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/font_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_setup_font_default" />

            <RadioButton
                android:id="@+id/font_mono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_setup_font_mono" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/show_date_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_show_date"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/save_layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout_setup_save"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
