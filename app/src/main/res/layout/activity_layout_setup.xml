<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.SwipeDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout_setup">

    <androidx.wear.widget.BoxInsetLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="4dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="@string/layout_setup_title"
                    android:textColor="@color/cosmo_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/layout_setup_hint"
                    android:textColor="@color/cosmo_text_secondary"
                    android:textSize="13sp" />

                <FrameLayout
                    android:id="@+id/preview_container"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@drawable/layout_preview_card"
                    android:clipToOutline="true"
                    android:foreground="@drawable/layout_preview_ring"
                    android:padding="10dp">

                    <VideoView
                        android:id="@+id/preview_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:keepScreenOn="true" />

                    <ImageView
                        android:id="@+id/preview_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/layout_setup_preview_content_desc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/watchface_preview" />

                    <View
                        android:id="@+id/preview_scrim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_preview_scrim" />

                    <FrameLayout
                        android:id="@+id/overlay_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/time_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#CC000000"
                            android:shadowRadius="4"
                            android:text="10:10"
                            android:textColor="@color/cosmo_time_text"
                            android:textSize="64sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#99000000"
                            android:shadowRadius="3"
                            android:text="Aug 5"
                            android:textColor="@color/cosmo_date_text"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/music_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#99000000"
                            android:shadowRadius="3"
                            android:text="@string/layout_setup_music_label"
                            android:textColor="@color/cosmo_music_text"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:id="@+id/slot_overlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_slot_overlay"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="8dp"
                                android:text="@string/layout_setup_slot_prompt"
                                android:textColor="@color/cosmo_text_primary"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/slot_buttons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:background="@drawable/layout_chip_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="@string/layout_setup_preview_badge"
                        android:textAllCaps="false"
                        android:textColor="@color/cosmo_text_primary"
                        android:textSize="12sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/show_date_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_show_date" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/show_seconds_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_show_seconds" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/use_24_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_use_24" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/date_format_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_date_format" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/time_font_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_time_font" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/date_font_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/layout_setup_date_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/layout_setup_time_size"
                            android:textColor="@color/cosmo_text_secondary" />

                        <TextView
                            android:id="@+id/time_size_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cosmo_text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/time_size_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="80"
                        android:stepSize="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/layout_setup_date_size"
                            android:textColor="@color/cosmo_text_secondary" />

                        <TextView
                            android:id="@+id/date_size_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cosmo_text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/date_size_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="60"
                        android:stepSize="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/layout_setup_music_size"
                            android:textColor="@color/cosmo_text_secondary" />

                        <TextView
                            android:id="@+id/music_size_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cosmo_text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/music_size_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="60"
                        android:stepSize="1" />
                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/save_layout_button"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/layout_setup_save" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.wear.widget.BoxInsetLayout>
</androidx.wear.widget.SwipeDismissFrameLayout>
