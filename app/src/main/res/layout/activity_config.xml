<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/config_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_intro_media"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_intro_taps"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_intro_controls"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_permission_media"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_permission_mic"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_stats_stub"
            android:paddingBottom="12dp" />

        <Switch
            android:id="@+id/reduced_motion_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_reduced_motion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_reduced_motion_desc"
            android:paddingBottom="12dp" />

        <Switch
            android:id="@+id/haptics_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_haptics" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_haptics_desc"
            android:paddingBottom="12dp" />

        <Switch
            android:id="@+id/mic_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_mic"
            android:enabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_mic_desc" />

        <Button
            android:id="@+id/config_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_continue"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
